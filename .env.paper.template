# ============================================================================
# SUPER GNOSIS - PAPER TRADING CONFIGURATION
# ============================================================================
# 
# Copy this file to .env for safe paper trading configuration.
# This template has conservative defaults for paper trading.
#
# QUICK SETUP (minimum required):
# 1. Copy: cp .env.paper.template .env
# 2. Get Alpaca paper trading keys from: https://app.alpaca.markets/paper/dashboard/overview
# 3. Fill in ALPACA_API_KEY and ALPACA_SECRET_KEY below
# 4. Run: python scripts/preflight_check.py
# 5. Start: python scripts/paper_trading_runner.py --symbol SPY
#
# ============================================================================

# ============================================================================
# ALPACA PAPER TRADING (REQUIRED)
# ============================================================================
# Get your paper trading keys from: https://app.alpaca.markets/paper/dashboard/overview
# Click "Generate new key" under "Paper Trading API Keys"

ALPACA_API_KEY=your_alpaca_paper_api_key_here
ALPACA_SECRET_KEY=your_alpaca_paper_secret_key_here

# SAFETY: Force paper trading mode (DO NOT CHANGE unless you know what you're doing)
ALPACA_PAPER=true
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# RISK MANAGEMENT (CONSERVATIVE DEFAULTS)
# ============================================================================
# These settings are designed for safe paper trading

MAX_POSITION_SIZE_PCT=2.0         # Max 2% of portfolio per trade
MAX_DAILY_LOSS_USD=1000.0         # Stop trading after $1000 daily loss
MAX_PORTFOLIO_LEVERAGE=1.0        # No leverage (cash only)
DEFAULT_CAPITAL=100000.0          # Paper account default capital

# ============================================================================
# EXECUTION SETTINGS
# ============================================================================

ORDER_TIMEOUT_SECONDS=60          # Cancel orders not filled in 60 seconds
ENABLE_SLIPPAGE_SIMULATION=false  # Disable slippage simulation for paper

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO                    # DEBUG for more details, INFO for normal
LOG_TO_FILE=true
LOG_FILE_PATH=logs/gnosis.log

# ============================================================================
# DATA SOURCES (OPTIONAL - USE DEFAULTS IF NOT SET)
# ============================================================================
# The system will use stub/fallback adapters if these are not configured.
# This is fine for testing but real data sources improve signal quality.

# Unusual Whales (options flow data) - https://unusualwhales.com/member/api-keys
# UNUSUAL_WHALES_API_TOKEN=your_token_here

# Massive.com (market data) - https://massive.com/keys
# MASSIVE_API_KEY=your_key_here
# MASSIVE_API_ENABLED=false

# ============================================================================
# DO NOT MODIFY BELOW THIS LINE (Safety defaults)
# ============================================================================

# Disable features that could cause issues in paper trading
DISABLE_OPTIONS_EXECUTION=false   # Keep enabled for testing
AUTO_SYNC_ENABLED=false           # No auto-sync to cloud
