{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements-railway.txt || pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn saas.gnosis_saas:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/api/status",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
