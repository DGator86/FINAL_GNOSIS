# ===========================================
# GNOSIS Trading System - Configuration
# ===========================================

# Alpaca Paper Trading API
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# Unusual Whales API
UNUSUAL_WHALES_API_TOKEN=your_unusual_whales_token

# Massive.com API
MASSIVE_API_KEY=your_massive_api_key
MASSIVE_API_ID=your_massive_api_secret

# Public API Key (for external access)
PUBLIC_SECRET_KEY=your_public_secret_key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Settings
APP_ENV=paper
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Trading Settings
MAX_POSITIONS=10
MAX_DAILY_LOSS=5000
SCAN_INTERVAL=60
POSITION_CHECK_INTERVAL=30

# Default Trading Symbols
TRADING_SYMBOLS=SPY,QQQ,AAPL,NVDA,MSFT,AMD,TSLA,AMZN,META,GOOGL

# ML Model Settings
MODEL_DIR=models/trained
CHECKPOINT_DIR=checkpoints

# Notifications (optional - add your tokens)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# ========================================
# GNOSIS ALPHA Configuration
# ========================================
# Separate Alpaca account for Alpha trading (PDT-friendly)
# Uses same credentials as main account by default, can be customized
ALPHA_ALPACA_API_KEY=your_alpha_alpaca_api_key
ALPHA_ALPACA_SECRET_KEY=your_alpha_alpaca_secret_key
ALPHA_ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# Alpha Signal Settings
ALPHA_MIN_CONFIDENCE=0.65
ALPHA_MAX_HOLDING_DAYS=7
ALPHA_MAX_POSITIONS=5
ALPHA_STOP_LOSS_PCT=0.05
ALPHA_TAKE_PROFIT_PCT=0.10
ALPHA_LOG_LEVEL=INFO
ALPHA_SIGNAL_DIR=data/alpha_signals

# Alpha Universe (comma-separated symbols)
ALPHA_UNIVERSE=AAPL,MSFT,GOOGL,AMZN,NVDA,META,TSLA,AMD,CRM,NFLX
