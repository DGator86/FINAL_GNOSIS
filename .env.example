# ===========================================
# GNOSIS Trading System - Configuration
# ===========================================
# Copy this file to .env and fill in your credentials

# Alpaca Paper Trading API (REQUIRED)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# Unusual Whales API (OPTIONAL - for options flow data)
UNUSUAL_WHALES_API_TOKEN=your_unusual_whales_token

# Massive.com API (OPTIONAL)
MASSIVE_API_KEY=your_massive_key
MASSIVE_API_ID=your_massive_id

# Public API Key (for external access to your GNOSIS API)
PUBLIC_SECRET_KEY=generate_a_secure_random_key

# Redis Configuration (OPTIONAL - will use in-memory if not available)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Settings
APP_ENV=paper
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Trading Settings
MAX_POSITIONS=10
MAX_DAILY_LOSS=5000
SCAN_INTERVAL=60
POSITION_CHECK_INTERVAL=30

# Default Trading Symbols
TRADING_SYMBOLS=SPY,QQQ,AAPL,NVDA,MSFT,AMD,TSLA,AMZN,META,GOOGL

# ML Model Settings
MODEL_DIR=models/trained
CHECKPOINT_DIR=checkpoints

# Notifications (OPTIONAL - for alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=
