# ===========================================
# GNOSIS Trading System - Railway Configuration
# ===========================================
# Copy this to Railway's environment variables
# Railway will provide DATABASE_URL and REDIS_URL if you add those services

# ===========================================
# ALPACA PAPER TRADING (FREE)
# ===========================================
# Get your keys at: https://alpaca.markets
ALPACA_API_KEY=your_alpaca_paper_api_key
ALPACA_SECRET_KEY=your_alpaca_paper_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_PAPER=true
ALPACA_DATA_FEED=iex

# ===========================================
# OPTIONAL: Premium Services (disable for free tier)
# ===========================================
# Unusual Whales - leave empty to disable
UNUSUAL_WHALES_API_TOKEN=

# Massive.com - disable for free tier
MASSIVE_API_ENABLED=false
MASSIVE_API_KEY=

# ===========================================
# OPTIONAL: Polygon.io (free tier available)
# ===========================================
# Get your key at: https://polygon.io
POLYGON_API_KEY=your_polygon_api_key
POLYGON_TIER=basic

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_ENV=production
LOG_LEVEL=INFO

# ===========================================
# TRADING SETTINGS
# ===========================================
MAX_POSITIONS=10
MAX_DAILY_LOSS=5000
SCAN_INTERVAL=60
POSITION_CHECK_INTERVAL=30
TRADING_SYMBOLS=SPY,QQQ,AAPL,NVDA,MSFT,AMD,TSLA,AMZN,META,GOOGL

# ===========================================
# SECURITY (change in production!)
# ===========================================
JWT_SECRET_KEY=change-this-in-railway-dashboard
PUBLIC_SECRET_KEY=your_public_secret_key

# ===========================================
# NOTIFICATIONS (optional)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# ===========================================
# RAILWAY PROVIDES THESE AUTOMATICALLY
# ===========================================
# When you add PostgreSQL and Redis services in Railway,
# these variables are auto-populated:
# DATABASE_URL=postgresql://...
# REDIS_URL=redis://...
#
# If you don't add Redis, the app will use in-memory cache (works fine)
# If you don't add PostgreSQL, some features won't work

# ===========================================
# ALPHA TRADING (optional secondary account)
# ===========================================
ALPHA_ALPACA_API_KEY=
ALPHA_ALPACA_SECRET_KEY=
ALPHA_MIN_CONFIDENCE=0.65
ALPHA_MAX_HOLDING_DAYS=7
ALPHA_MAX_POSITIONS=5
